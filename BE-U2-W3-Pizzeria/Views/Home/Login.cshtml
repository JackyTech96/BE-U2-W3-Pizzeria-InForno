@model BE_U2_W3_Pizzeria.Models.Utenti

@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card text-dark">
                <div class="card-header">Login</div>
                <div class="card-body">
                    @if (ViewBag.AuthError != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.AuthError
                        </div>
                    }

                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                    {
                        <div class="mb-3">
                            @Html.LabelFor(model => model.Username, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", required = "true" })
                            <div class="invalid-feedback">
                                Inserisci il tuo Username.
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Password, new { @class = "form-label" })
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "true" })
                            <div class="invalid-feedback">
                                Inserisci la tua Password.
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button style = "background-color: #FF7323; color: #ffffff;"  type="submit" class="btn">Login</button>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>


